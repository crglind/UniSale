<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <TextView
        android:id="@+id/listing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <!--android:layout_toRightOf="@+id/thumbnail_image"/>-->
    <TextView
        android:id="@+id/listing_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/listing_title"/>
    <TextView
        android:id="@+id/listing_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listing_description"
        android:textSize="20dp"/>
    <!--android:layout_toRightOf="@+id/thumbnail_image" />-->
    <TextView
        android:id="@+id/listing_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/listing_price"
        android:layout_below="@+id/listing_description"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/listing_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/listing_condition"
        android:layout_below="@+id/listing_description"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/edit_button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_below="@id/listing_price"
        android:layout_toLeftOf="@+id/remove_button"
        android:layout_marginRight="20dp"
        android:text="EDIT"/>
    <Button
        android:id="@+id/remove_button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_below="@+id/listing_price"
        android:text="REMOVE"
        android:layout_alignParentRight="true"/>

</RelativeLayout>